<div class="row">
	<div class="col-sm-8">
		<%= simple_form_for(@person) do |f| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">New Student</h3>
				</div>

				<div class="panel-body">
					<%= render "form", f: f %>
				</div>
					
				<div class="panel-footer">
					<%= f.button :submit %>
				</div>
			</div>
		<% end %>
	</div>

	<div class="col-sm-4">
		
	</div>
</div>
