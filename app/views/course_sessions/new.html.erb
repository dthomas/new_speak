<%= content_for(:breadcrumb) do %>
	<ol class="breadcrumb">
	  <li><%= link_to 'Settings', dashboards_path %></li>
	  <li><%= link_to 'Courses', courses_path %></li>
	  <li class="active">New Session</li>
	</ol>
<% end %>

<div class="row">
	<div class="col-sm-8">
		<%= simple_form_for([@course, @course_session]) do |f| %>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">New Course Session</h3>
			</div>
				<div class="panel-body">
					<%= render "form", f: f %>
				</div>

				<div class="panel-footer">
					<%= f.button :submit, 'Add Session' %>
				</div>
			</div>
		<% end %>
	</div>

	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading">Some Info</div>
			<div class="panel-body"></div>
		</div>
	</div>
</div>