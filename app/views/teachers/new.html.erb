<%= content_for(:breadcrumb) do %>
	<ol class="breadcrumb">
	  <li> <%= link_to 'Settings', dashboards_path %> </li>
	  <li> <%= link_to 'Teachers', teachers_path %> </li>
	  <li class="active">New Teacher</li>
	</ol>
<% end %>

<div class="row">
	<div class="col-sm-8">
		<%= bootstrap_form_for @teacher do |f| %>
			<div class="default-panel">
				<div class="panel-heading">
					<h3 class="panel-title">New Teacher</h3>
				</div>

				<div class="panel-body" id="teacher-info">

					<%= f.fields_for :personal_profile do |pf| %>
						<%= render layout: "admissions/profile", locals: { f: pf } do %>
							<div class="col-sm-4">
								<%= f.date_field :date_of_joining, placeholder: "Date of Joining", control_col: "col-sm-12", label_col: "", hide_label: true, icon: "calendar" %>
							</div>
						<% end %>
					<% end %>
				</div>

				<div class="panel-footer">
					<%= f.submit "Admit Teacher" %>
				</div>
			</div>
		<% end %>
	</div>

	<div class="col-sm-4">
		Sidebar
		To do : educational qualifications
	</div>
</div>