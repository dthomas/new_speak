<div class="row">
	<div class="col-sm-12">
		<% flash.each do |type, message| %>
		  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissible fade in">
		  	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		    <%= message %>
		  </div>
		<% end %>
	</div>
</div>