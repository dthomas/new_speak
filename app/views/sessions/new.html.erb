<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= simple_form_for(@user, url: sessions_path, layout: :horizontal) do |f| %>
					<%= f.input :email, placeholder: 'Email', required: true, label: false %>
					<%= f.input :password, placeholder: 'Password', required: true, label: false %>
					<%= f.button :submit, "Sign In", class: "btn btn-block btn-success" %>
				<% end %>
			</div>
		</div>
	</div>
</div>