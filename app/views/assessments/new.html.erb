<%= content_for(:breadcrumb) do %>
	<ol class="breadcrumb">
	  <li> <%= link_to 'Dashboard', dashboards_path %> </li>
	  <li> <%= link_to @teaching_assignment.class_group.name, @teaching_assignment.class_group %> </li>
	  <li> <%= link_to @teaching_assignment.course_subject.title, @teaching_assignment %> </li>
	  <li class="active">New Assessment</li>
	</ol>
<% end %>

<div class="row">
	<div class="col-sm-8">
		<%= simple_form_for([@teaching_assignment, @assessment]) do |f| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						New Assessment for <%= @teaching_assignment.course_subject.title %>
					</h3>
				</div>

				<div class="panel-body">
					<%= render "form", f: f %>
				</div>
				<div class="panel-footer">
					<%= f.button :submit, 'Save Assessment' %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-sm-4"></div>
</div>