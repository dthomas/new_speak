<div class="col-sm-12">
	<ul>
		<li> <%= link_to 'Teachers', teachers_path %> </li>
		<li> <%= link_to 'Students', students_path %> </li>
	</ul>
</div>

<div class="col-sm-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">My Classes</h3>
		</div>

		<table class="table table-condensed">
			<thead>
				<tr>
					<th>#</th>
					<th>Subject</th>
					<th>Class Group</th>
					<th>Course Session</th>
				</tr>
			</thead>

			<tbody>
				<% current_user.teaching_assignments.each_with_index do |assignment, index| %>
					<tr>
						<td><%= index + 1 %></td>
						<td><%= link_to assignment.course_subject.title, assignment %></td>
						<td><%= assignment.class_group.name %></td>
						<td><%= assignment.class_group.course_session.name %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>