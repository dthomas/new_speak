<div class="row">
	<div class="col-sm-4">
			<%= f.input :first_name, placeholder: 'First Name' %>
	</div>

	<div class="col-sm-4">
			<%= f.input :middle_name, placeholder: 'First Name' %>
	</div>

	<div class="col-sm-4">
			<%= f.input :last_name, placeholder: 'First Name' %>
	</div>


</div>

<div class="row">
	<div class="col-sm-4">
			<%= f.input :gender, collection: [["Female", "female"], ["Male", "male"]] %>
	</div>

	<div class="col-sm-4">
		<%= f.input :date_of_birth, placeholder: 'Date of Birth', as: :date_picker %>
	</div>

	<div class="col-sm-4">
		<%= f.input :date_of_admission, placeholder: 'Date of Admission', as: :date_picker %>
	</div>
</div>