<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Family Information</h3>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-sm-12">
				<%= f.input :name, placeholder: "Family Name" %>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<%= f.fields_for :parents do |pf| %>
					<div  id="parent-<%= pf.index %>">
					<div class="row">
						<div class="col-sm-12">
							<div class="well well-sm">
								Parent <%= pf.index + 1 %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-8">
							<%= pf.input :occupation, placeholder: "Occupation" %>
						</div>
						<div class="col-sm-4">
						<%= pf.input :relation, collection: [["Father", "father"], ["Mother", "mother"], ["Guardian", "guardian"]], prompt: "Select Relation" %>
						</div>
					</div>

					<%= pf.fields_for :personal_profile do |p| %>
						<%= render "profile", f: p %>
					<% end %>

					<%= pf.hidden_field :institute_id %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>